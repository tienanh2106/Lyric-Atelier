# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database - use DATABASE_URL for production (Neon, Supabase, etc.)
# or individual vars for local development
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=lyric_atelier

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION=10m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=1d

# Google GenAI (also used for file uploads via Gemini Files API)
GOOGLE_GENAI_API_KEY=your-google-genai-api-key
# Default model for server-side generation (scenario suggestions, media-to-text).
# Client can override this per-request (e.g. gemini-2.5-pro-preview-06-05 for thinking mode).
GENAI_DEFAULT_MODEL=gemini-2.5-flash
GROQ_API_KEY=

# PayOS (Vietnamese payment gateway - https://payos.vn)
PAYOS_CLIENT_ID=
PAYOS_API_KEY=
PAYOS_CHECKSUM_KEY=
FRONTEND_URL=http://localhost:3000

# Credits Configuration
DEFAULT_CREDIT_VALIDITY_DAYS=90
CREDIT_COST_PER_TOKEN=0.01
TRANSCRIBE_CREDIT_COST=10
CREDITS_EXPIRING_SOON_DAYS=7
# Token estimation: ~4 characters = 1 token (rough estimation for credit cost)
CREDIT_CHARS_PER_TOKEN=4
# Extra token buffer reserved for scenario suggestion responses (longer output)
CREDIT_SCENARIO_BUFFER_TOKENS=1000
# Fixed token estimate for media-to-text (audio/video processing)
CREDIT_MEDIA_ESTIMATED_TOKENS=2000

# Cron secret - set this in Vercel environment variables
# Vercel will send Authorization: Bearer <CRON_SECRET> when calling cron endpoints
CRON_SECRET=your-cron-secret

# Comma-separated allowed CORS origins (leave empty to allow all â€” dev only)
# Example: https://myapp.vercel.app,https://www.myapp.com
ALLOWED_ORIGINS=
